  <%= link_to image_tag(("Printed.png"), :class => "img-logo-printer"), root_path %>
</div>


<div class="card-offer">

  <div class="text-center mt-4">
    <%= cl_image_tag @demand.product.photo.key, class: "img-show", alt: "Product Pic" %>
  </div>

  <div class="mt-4">
    <h2><%= @demand.product.name %></h2>
    <p><strong>Product description</strong> : <%= @demand.product.description %></p>
    <p class="fw-light">Client: <%= @demand.client.first_name  %></p>
    <p class="fw-light">Comment: <%= @demand.comment  %></p>
    <p class="fw-bold">Client Price: <%= @demand.proposed_price  %> â‚¬</p>
  </div>
</div>



<% if current_user.id == @demand.client_id %>
  <div class="btn-delete-demand  demands-access-btn">
    <%= link_to "Delete demand",
                  product_delete_demand_path(@demand.product.id, @demand),
                  method: :delete,
                  data: { confirm: "Are you sure?" },
                  class: "btn create" %>
  </div>
<% else %>
<div class="btnMakeOffer">
  <%= link_to "Make an offer", new_demand_offer_path(@demand), class:"create"%>
</div>
<% end %>
