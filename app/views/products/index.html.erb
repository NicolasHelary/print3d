<div class="nav-client">
  <%= link_to image_tag(("print3d.PNG"), :class => "img-logo"), root_path %>
</div>

<div class="product-container">
  <h4> Recently Added On Print3D</h4>

  <div class="cards-products">
    <% @products.each do |product| %>
      <%= link_to product_path(product), class:"product-index-links", :action => 'go' do %>
        <div class="card-product">
          <%= image_tag "#{product.picture}", class: "img-card-product", alt: "Product Pic" %>
          <div class="card-product-infos">
            <h2><%= product.name %></h2>
            <p><%= product.description %></p>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
